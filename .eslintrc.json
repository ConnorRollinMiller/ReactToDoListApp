{
   "env": {
      "browser": true,
      "node": true,
      "commonjs": true,
      "es6": true
   },
   "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
   ],
   "parserOptions": {
      "ecmaFeatures": {
         "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
   },
   "plugins": [
      "react"
   ],
   "rules": {
      "indent": [
         "error",
         3
      ],
      "linebreak-style": [
         "error",
         "unix"
      ],
      "quotes": [
         "error",
         "single"
      ],
      "semi": [
         "error",
         2
      ],
      "no-unused-vars": [
         "warn"
      ],
      "no-trailing-spaces": "error",
      "object-curly-spacing": [
         "always",
         {
            "arraysInObjects": true
         }
      ],
      "no-var": "error",
      "react/jsx-curly-spacing": {
         "when": "always"
      },
      "react/jsx-wrap-multilines": {
         "declaration": "perens-new-line",
         "assignment": "parens-new-line",
         "return": "parens-new-line",
         "arrow": "parens-new-line",
         "condition": "parens-new-line",
         "logical": "parens-new-line",
         "prop": "parens-new-line"
      }
   }
}